<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:world="sdformat/v1.8/world.xsd" xmlns:light="sdformat/v1.8/light.xsd" xmlns:actor="sdformat/v1.8/actor.xsd" xmlns:model="sdformat/v1.8/model.xsd" targetNamespace="sdformat/v1.8/sdf.xsd" version="1.1">
  <xs:import namespace="sdformat/v1.8/model.xsd" schemaLocation="./model.xsd"/>
  <xs:import namespace="sdformat/v1.8/actor.xsd" schemaLocation="./actor.xsd"/>
  <xs:import namespace="sdformat/v1.8/light.xsd" schemaLocation="./light.xsd"/>
  <xs:import namespace="sdformat/v1.8/world.xsd" schemaLocation="./world.xsd"/>
  <xs:complexType name="sdf">
    <xs:annotation>
      <xs:documentation xml:lang="en">SDFormat base element that can include one model, actor, light, or worlds. A user of multiple worlds could run parallel instances of simulation, or offer selection of a world at runtime.</xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="world" minOccurs="0" maxOccurs="unbounded" type="world:world">
        <xs:annotation>
          <xs:documentation xml:lang="en">The world element encapsulates an entire world description including: models, scene, physics, and plugins.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="model" minOccurs="0" maxOccurs="1" type="model:model">
        <xs:annotation>
          <xs:documentation xml:lang="en">The model element defines a complete robot or any other physical object.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="actor" minOccurs="0" maxOccurs="1" type="actor:actor">
        <xs:annotation>
          <xs:documentation xml:lang="en">A special kind of model which can have a scripted motion. This includes both global waypoint type animations and skeleton animations.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="light" minOccurs="0" maxOccurs="1" type="light:light">
        <xs:annotation>
          <xs:documentation xml:lang="en">The light element describes a light source.</xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:all>
    <xs:attribute name="version" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation xml:lang="en">Version number of the SDFormat specification.</xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>
</xs:schema>
